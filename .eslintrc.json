{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "plugin:@next/next/recommended",
        "plugin:import/errors"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "linebreak-style": "off",
        "react/require-default-props": "off",
        "global-require": "off",
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_"
            }
        ]
    },
    "settings": {
        "import/resolver": {
            "alias": {
                "extensions": [
                    ".js",
                    ".jsx"
                ],
                "map": [
                    [
                        "@",
                        "./src"
                    ],
                    [
                        "@components",
                        "./src/components"
                    ],
                    [
                        "@lib",
                        "./src/lib"
                    ]
                ]
            }
        }
    }
}